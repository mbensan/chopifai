<div id="<%= dom_id product %>">
  <div class="m-2">
    <div class="card">
      <% if product.image == nil %>
        <img src="/noimage.jpg" class="card-img-top" alt="...">
      <%else%>
        <%=image_tag product.image, class: 'card-img-top'%>
      <%end%>
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <p class="card-text">
          <b>$<%= product.price %></b>
        </p>
        <%= link_to "Ver mÃ¡s", product, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Sku:</strong>
    <%= product.sku %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= product.category_id %>
  </p>

</div>
