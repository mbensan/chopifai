<p style="color: green"><%= notice %></p>

<% content_for :title, "Productos" %>
<div class="row">
  <div class="col-2">
    <h4 class="text-center">Filtros</h4>
    <div class="m-1">
      <ul class="list-group" id="categories_filter">
        <% @categories.each do |cat| %>
          <li class="list-group-item">
            <a <% if @category_id == cat.id.to_s %>class="selected_filter"<% end %>
             href="/products?category_id=<%=cat.id%>"><%=cat.name%></a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="col-10">
    <div id="products">
      <h2 class="text-center">Productos:</h2>
      <div class="row">
        <% @products.each do |product| %>
        <div class="col-12 col-sm-4 col-md-3">
          <%= render product %>
        </div>
      <% end %>
      </div>
    </div>
    <% if user_signed_in? && current_user.role == 'admin' %>
      <%= link_to "New product", new_product_path %>
    <% end %>
  </div>
</div>

